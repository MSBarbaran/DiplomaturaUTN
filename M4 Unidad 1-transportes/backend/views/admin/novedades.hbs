<div class="container" style="margin-top: 50px;">
    {{!-- fila 1 --}}
    <div class="row">
        <p class="text-end">Hola {{usuario}}! <a href="/admin/login/logout" class="btn btn-danger"> Cerrar sessi√≥n<i class="fa-solid fa-arrow-right-from-bracket"></i></a></p>
    </div>
    {{!-- fin fila 1 --}}
    {{!-- fila 2 --}}
    <div class="row">
        <div class="col-7">
            <h3>Listado de novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i>Nuevo</a>
        </div>
    </div>
    {{!--fin fila 2 --}}
    {{!-- fila 3 --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead >
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Titulo</th>
                         <th scope="col">Imagen</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                
                <tbody>
                    {{!-- fila que se va a repetir dependiendo la novedad --}}
                    {{#each novedades}}
                    <tr>
                        <th scope="row"> {{id}} </th>
                        <td> {{titulo}}</td>
                        <td> {{{imagen}}}</td>
                        <td class="text-end">
                            {{!-- boton lapiz para modificar --}}
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary"><i class="fa fa-pencil"></i></a>
                            {{!-- boton tacho de basura para eliminar --}}
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                     {{/each}}
                </tbody>
            </table>
        </div>
    </div>
     {{!-- fin fila 3 --}}
</div>